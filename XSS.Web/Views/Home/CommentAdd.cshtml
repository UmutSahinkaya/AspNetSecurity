
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CommentAdd</title>
</head>
<body>
    <form method="post">
        <input type="text" name="name" /><br />
        <textarea name="comment"></textarea><br />
        <input type="submit" value="Yorum Gönder"/>
    </form>
    @*<h1>Yorumlar</h1>
    <strong>@ViewBag.Name</strong>
    <hr />
    <span>@Html.Raw(@ViewBag.Comment)</span> @*--Html Raw saldırılara karşı hazırlıksız bırakır*@
    <h1>Yorumlar</h1>
    @if (ViewBag.comments != null)
    {
        foreach (var item in ViewBag.comments as string[])
        {
            @*<span>@item</span><hr />*@
            <span>@Html.Raw(item)</span><hr />
        }
    }

</body>
</html>
